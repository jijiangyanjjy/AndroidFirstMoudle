<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/drawerLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:scaleType="centerCrop"
            android:id="@+id/img_bg"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <android.support.v4.widget.NestedScrollView
            android:layout_marginTop="?attr/actionBarSize"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="10dp">

                <TextView
                    android:id="@+id/tv_wendu"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="right"
                    android:text="——"
                    android:textColor="#FFFFFF"
                    android:textSize="45sp" />

                <TextView
                    android:id="@+id/tv_state"
                    android:layout_below="@+id/tv_wendu"
                    android:text="——"
                    android:textColor="#FFFFFF"
                    android:textSize="20sp"
                    android:gravity="right"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <android.support.v7.widget.CardView
                    android:id="@+id/card_one"
                    android:layout_marginTop="15dp"
                    app:contentPadding="7dp"
                    app:cardCornerRadius="5dp"
                    app:cardBackgroundColor="#64453c3c"
                    android:layout_below="@+id/tv_state"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/tv_yubao"
                            android:textColor="#FFFFFF"
                            android:text="预报"
                            android:textSize="20sp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />

                        <LinearLayout
                            android:layout_marginTop="15dp"
                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <TextView
                                android:textSize="16sp"
                                android:textColor="#FFFFFF"
                                android:id="@+id/tv_one_one"
                                android:layout_weight="1"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content" />

                            <TextView
                                android:textSize="16sp"
                                android:gravity="center"
                                android:textColor="#FFFFFF"
                                android:id="@+id/tv_one_two"
                                android:layout_weight="1"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content" />

                            <TextView
                                android:textSize="16sp"
                                android:gravity="center"
                                android:textColor="#FFFFFF"
                                android:id="@+id/tv_one_three"
                                android:layout_weight="0.5"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content" />

                            <TextView
                                android:textSize="16sp"
                                android:gravity="right"
                                android:textColor="#FFFFFF"
                                android:id="@+id/tv_one_four"
                                android:layout_weight="0.5"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_marginTop="15dp"
                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <TextView
                                android:textSize="16sp"
                                android:textColor="#FFFFFF"
                                android:id="@+id/tv_two_one"
                                android:layout_weight="1"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content" />

                            <TextView
                                android:textSize="16sp"
                                android:gravity="center"
                                android:textColor="#FFFFFF"
                                android:id="@+id/tv_two_two"
                                android:layout_weight="1"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content" />

                            <TextView
                                android:textSize="16sp"
                                android:gravity="center"
                                android:textColor="#FFFFFF"
                                android:id="@+id/tv_two_three"
                                android:layout_weight="0.5"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content" />

                            <TextView
                                android:textSize="16sp"
                                android:gravity="right"
                                android:textColor="#FFFFFF"
                                android:id="@+id/tv_two_four"
                                android:layout_weight="0.5"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_marginTop="15dp"
                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <TextView
                                android:textSize="16sp"
                                android:textColor="#FFFFFF"
                                android:id="@+id/tv_three_one"
                                android:layout_weight="1"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content" />

                            <TextView
                                android:textSize="16sp"
                                android:gravity="center"
                                android:textColor="#FFFFFF"
                                android:id="@+id/tv_three_two"
                                android:layout_weight="1"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content" />

                            <TextView
                                android:textSize="16sp"
                                android:gravity="center"
                                android:textColor="#FFFFFF"
                                android:id="@+id/tv_three_three"
                                android:layout_weight="0.5"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content" />

                            <TextView
                                android:textSize="16sp"
                                android:gravity="right"
                                android:textColor="#FFFFFF"
                                android:id="@+id/tv_three_four"
                                android:layout_weight="0.5"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content" />

                        </LinearLayout>

                    </LinearLayout>

                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    android:layout_marginTop="15dp"
                    app:contentPadding="7dp"
                    app:cardCornerRadius="5dp"
                    app:cardBackgroundColor="#64453c3c"
                    android:layout_below="@+id/card_one"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        
                        <TextView
                            android:text="生活建议"
                            android:textColor="#FFFFFF"
                            android:textSize="20sp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />

                        <TextView
                            android:layout_marginTop="15dp"
                            android:textColor="#FFFFFF"
                            android:id="@+id/air"
                            android:text="气象条件非常有利于空气污染物稀释、扩散和清除，可在室外正常活动。"
                            android:textSize="16sp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />

                        <TextView
                            android:layout_marginTop="15dp"
                            android:textColor="#FFFFFF"
                            android:id="@+id/comf"
                            android:text="白天不太热也不太冷，风力不大，相信您在这样的天气条件下，应会感到比较清爽和舒适。"
                            android:textSize="16sp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />

                        <TextView
                            android:layout_marginTop="15dp"
                            android:textColor="#FFFFFF"
                            android:id="@+id/cw"
                            android:text="不宜洗车，未来24小时内有雨，如果在此期间洗车，雨水和路上的泥水可能会再次弄脏您的爱车。"
                            android:textSize="16sp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />

                        <TextView
                            android:layout_marginTop="15dp"
                            android:textColor="#FFFFFF"
                            android:id="@+id/drsg"
                            android:text="建议着薄外套、开衫牛仔衫裤等服装。年老体弱者应适当添加衣物，宜着夹克衫、薄毛衣等。"
                            android:textSize="16sp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />

                        <TextView
                            android:layout_marginTop="15dp"
                            android:textColor="#FFFFFF"
                            android:id="@+id/flu"
                            android:text="天冷风大，易发生感冒，请注意适当增加衣服，加强自我防护避免感冒。"
                            android:textSize="16sp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />

                        <TextView
                            android:layout_marginTop="15dp"
                            android:textColor="#FFFFFF"
                            android:id="@+id/sport"
                            android:text="有降水，且风力很强，推荐您在室内进行低强度运动，建议适当停止户外运动；若坚持户外运动，须注意避雨防风。"
                            android:textSize="16sp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />

                        <TextView
                            android:layout_marginTop="15dp"
                            android:textColor="#FFFFFF"
                            android:id="@+id/trav"
                            android:text="有降水，温度适宜，风大，可能会影响您的出行，旅游指数一般，外出请注意携带雨具并防风。"
                            android:textSize="16sp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />

                        <TextView
                            android:layout_marginTop="15dp"
                            android:textColor="#FFFFFF"
                            android:id="@+id/uv"
                            android:text="紫外线强度较弱，建议出门前涂擦SPF在12-15之间、PA+的防晒护肤品。"
                            android:textSize="16sp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />

                    </LinearLayout>

                </android.support.v7.widget.CardView>

            </RelativeLayout>

        </android.support.v4.widget.NestedScrollView>

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolBar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize">

            <TextView
                android:id="@+id/tv_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="@string/toolBar_title"
                android:textColor="#FFFFFF"
                android:textSize="22sp" />

        </android.support.v7.widget.Toolbar>

    </FrameLayout>

    <FrameLayout
        android:id="@+id/main_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="start">

    </FrameLayout>

</android.support.v4.widget.DrawerLayout>